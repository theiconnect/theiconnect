@model IEnumerable<EMS.Models.DepartmentModel>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_EMSLayout.cshtml";
}


<section class="mb-4">
    <div class="card">
        <div class="card-body">
            <!-- Search row -->
            <div class="row g-3 align-items-end">
                <div class="col-md-5">
                    <label for="searchName" class="form-label">Name</label>
                    <input id="searchName" type="text" class="form-control" placeholder="Search by department name">
                </div>
                <div class="col-md-5">
                    <label for="searchLocation" class="form-label">Location</label>
                    <input id="searchLocation" type="text" class="form-control" placeholder="Search by location">
                </div>

                <div class="col-md-2 d-flex gap-2">
                    <button id="btnSearch" class="btn btn-primary" >Search</button>
                    <button id="btnClear" class="btn btn-outline-secondary">Clear</button>
                </div>
            </div>

            <div class="mt-3">
                <button id="btnAddDept" class="btn btn-success" onclick="goToAdd()">Add Department</button>
            </div>
        </div>
    </div>
</section>

<!-- Grid / Table -->
<section>
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table id="deptTable" class="table table-striped table-bordered align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>S.NO</th>
                            <th>Department Code</th>
                            <th>Department Name</th>
                            <th>Location</th>
                            <th>Is Active</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>D001</td>
                            <td>HR</td>
                            <td>Hyderabad</td>
                            <td>True</td>
                            <td> 
                                @* @Html.ActionLink("Edit", "EditDepartment", "Department") *@
                                <a class="btn btn-primary" href="/Department/EditDepartment">Edit</a>
                                <a class="btn btn-danger" href="/Department/EditDepartment">Delete</a>
                                <button  class="btn btn-info"onclick="goToView()">View</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer text-muted small">
            Showing departments. Use Search to filter results.
        </div>
    </div>
</section>
<script type="text/javascript">
 
function goToView(){
    location.href= '/department/viewdepartment';
}

function goToAdd(){
        location.href= '/department/createdepartment';

}

</script>