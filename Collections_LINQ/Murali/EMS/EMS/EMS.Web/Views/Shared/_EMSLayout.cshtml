<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Employee Management System</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Project CSS -->
    <link href="/EMS_Site/css/department.css" rel="stylesheet" />
    @* @{
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    } *@
</head>
<body>
    <!-- Header -->
    <header class="site-header d-flex align-items-center justify-content-between px-3 py-2 shadow-sm">
        <div class="d-flex align-items-center">
            <button id="btnToggleMenu" class="btn btn-link me-2 p-0" title="Toggle menu">
                <span class="hamburger">&#9776;</span>
            </button>
            <h5 class="mb-0 text-center">Employee Management System</h5>
        </div>

        <div class="d-flex align-items-center">
            <img src="https://via.placeholder.com/36" alt="avatar" class="avatar rounded-circle" />
        </div>
    </header>

    <div class="d-flex">
        <!-- Sidebar / Menu -->
        <nav id="sideMenu" class="side-menu bg-light border-end">
            <div class="p-3">
                <div class="user-info mb-3">
                    <div class="fw-bold">John Doe</div>
                    <div class="text-muted small">Admin</div>
                </div>

                <h6 class="text-muted small">Menu</h6>
                <ul class="nav flex-column">
                    <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Company" ? "active" : "")" asp-controller="Company" asp-action="ViewCompany">Company</a></li>
                    <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Department" ? "active" : "")" asp-controller="Department" asp-action="list">Departments</a></li>
                    <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Employee" ? "active" : "")"  asp-controller="Employee" asp-action="List">Employees</a></li>
                </ul>
            </div>
        </nav>

        <!-- Main content -->
        <main class="flex-fill p-4">
            @RenderBody()
        </main>
    </div> 
   <div>
    <footer class="site-footer">
        <div class="row">
            <div class="col-3">
            </div>
            <div class="col-9">
                    <div class="footer-inner" id="footer-div">
                        <span>📞 +91 7346862992</span>
                        <span>🌐 <a href="https://www.innovatech.com" target="_blank" rel="noopener">www.innovatech.com</a></span>
                        <span>✉️ <a href="mailto:info@innovatech.com">info@innovatech.com</a></span>
                    </div>
            </div>
        </div>
        
    </footer>
    </div>
    <!-- Bootstrap JS (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- App JS -->
    <script src="/EMS_Site/js/department.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>