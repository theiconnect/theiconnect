@model EMS.Web.Models.EmployeeViewModel

@{
    ViewData["Title"] = "AddEmployee";
    Layout = "~/Views/Shared/_EMSLayout.cshtml";
}
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <script>
        alert('@ViewBag.ErrorMessage');
    </script>
}



<div class="container">
    <h2>Add Employee</h2>
    <hr />
    <form asp-action="saveemployee" asp-controller="Employee">
        <div class="row">
            <div class="form-group col-3">
                <label class="control-label fw-bold">Employee Code:</label>
                <input asp-for="Code" class="form-control" />
            </div>

            <div class="form-group col-3">
                <label class="control-label fw-bold">First Name:</label>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="form-group col-3">
                <label class="control-label fw-bold">Last Name:</label>
                <input asp-for="LastName" class="form-control" />
            </div>
            <div class="form-group col-3">
                <label class="control-label fw-bold">Blood Group:</label>
                <select asp-for="BloodGroup" class="form-select">
                    <option value="">Select</option>
                    <option value="APlus">A+</option>
                    <option value="AMinus">A-</option>
                    <option value="BPlus">B+</option>
                    <option value="BMinus">B-</option>
                    <option value="OPlus">O+</option>
                    <option value="OMinus">O-</option>
                    <option value="ABPlus">AB+</option>
                    <option value="ABMinus">AB-</option>
                </select>
                <span asp-validation-for="BloodGroup" class="text-danger"></span>
            </div>
            <div class="form-group col-3">
                <label class="control-label fw-bold">Gender:</label>
                <select asp-for="Gender" class="form-select" required>
                    <option value="">Select</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group col-3">
                <label class="control-label fw-bold">EmailId:</label>
                <input asp-for="EmailId" class="form-control" />
            </div>
            <div class="form-group col-3">
                <label class="control-label fw-bold">Mobile Number:</label>
                <input asp-for="MobileNumber" class="form-control" />
            </div>
            <div class="form-group col-3">
                <label class="control-label fw-bold">Date Of Birth:</label>
                <input asp-for="DateOfBirth" class="form-control" />
            </div>
            <div class="form-group col-5">
                <label class="control-label fw-bold">date Of Joining:</label>
                <input asp-for="DateOfJoining" class="form-control" />
            </div>
            <div class="form-group col-3">
                <label class="control-label fw-bold">ExpInMonths:</label>
                <input asp-for="ExpInMonths" class="form-control" />
            </div>
            <div class="form-group col-3">
                <label class="control-label fw-bold">SalaryCtc:</label>
                <input asp-for="SalaryCtc" class="form-control" />
            </div>
            <div class="form-check col-3">
                <input class="form-check-input" asp-for="IsActive">
                <label class="form-check-label" for="flexCheckDefault">
                    Active
                </label>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-3"></div>
            <div class="col-9">
                <button type="reset" class="btn btn-outline-secondary me-2">Reset Form</button>
                <button type="submit" class="btn btn-primary">Save Employee</button>
                <button onclick="display()" type="button" class="btn btn-primary">Cancel</button>
            </div>
        </div>
    </form>
</div>




                        

                      
 

        
   

      
