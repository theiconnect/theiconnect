@{
    Layout = "~/Views/Shared/_EMSLayout.cshtml";
}

<style>
    /* Minimal page-specific styles (keeps Bootstrap classes primary) */
    .sidebar {
        background: #fff;
        border-right: 1px solid #e9ecef;
        padding: 0.75rem;
        min-height: calc(100vh - 80px);
    }

    .sidebar .nav-link {
        color: #0d6efd;
    }

    .sidebar .nav-link.active {
        background-color: #0d6efd;
        color: #fff;
    }

    .company-section {
        background: #fff;
        padding: 1rem;
        border-radius: 0.375rem;
        margin-bottom: 1rem;
        box-shadow: 0 1px 2px rgba(16,24,40,0.03);
    }

    /* Keep label column narrow and bold */
    .info-table th.label {
        width: 180px;
        font-weight: 600;
        vertical-align: top;
    }

    /* Simple responsive tweak so sidebar is not too tall on small screens */
 
</style>

<div class="container-fluid">


        <!-- Main content -->
        <main class="col-12 col-md-9 col-lg-10">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1 class="h5 mb-0">View Company Details</h1>
                <a class="btn btn-warning btn-sm"  asp-controller="Company" asp-action="EditCompany">Edit Company Info</a>
            </div>

            <!-- Company Details -->
            <section class="company-section">
                <h2 class="h6 mb-3">Company Details</h2>
                <table class="table table-borderless info-table mb-0">
                    <tbody>
                        <tr>
                            <th class="label">Company Name</th>
                            <td>Innovatech Solutions Pvt. Ltd.</td>
                        </tr>
                        <tr>
                            <th class="label">Registration Date</th>
                            <td>2023-01-15</td>
                        </tr>
                        <tr>
                            <th class="label">Website</th>
                            <td><a href="http://www.innovatech.com" target="_blank" rel="noopener">www.innovatech.com</a></td>
                        </tr>
                    </tbody>
                </table>
            </section>

            <!-- Contact Details -->
            <section class="company-section">
                <h2 class="h6 mb-3">Contact Details</h2>
                <table class="table table-borderless info-table mb-0">
                    <tbody>
                        <tr>
                            <th class="label">Phone Number</th>
                            <td>(555) 123-4567</td>
                        </tr>
                        <tr>
                            <th class="label">Email</th>
                            <td>info@innovatech.com</td>
                        </tr>
                        <tr>
                            <th class="label">TIN</th>
                            <td>T1234567890</td>
                        </tr>
                        <tr>
                            <th class="label">PAN</th>
                            <td>PABCDE1234F</td>
                        </tr>
                        <tr>
                            <th class="label">Bank A/C No</th>
                            <td>98765432101234567890</td>
                        </tr>
                    </tbody>
                </table>
            </section>

            <!-- Registered Addresses -->
            <section class="company-section">
                <h2 class="h6 mb-3">Registered Addresses</h2>
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0 addresses">
                        <thead class="table-light">
                            <tr>
                                <th>Type</th>
                                <th>Line 1</th>
                                <th>Line 2</th>
                                <th>City</th>
                                <th>State</th>
                                <th>Pin</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Corporate</td>
                                <td>101 Tech Park Avenue</td>
                                <td>Tower B, 5th Floor</td>
                                <td>Metroville</td>
                                <td>California</td>
                                <td>902100</td>
                            </tr>
                            <tr>
                                <td>Branch</td>
                                <td>202 Industrial Drive</td>
                                <td>Suite 500</td>
                                <td>Port City</td>
                                <td>Texas</td>
                                <td>770012</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </section>
        </main>
    </div>
</div>