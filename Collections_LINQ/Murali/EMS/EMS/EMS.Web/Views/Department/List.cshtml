@model List<EMS.Web.Models.DepartmentListViewModel>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_EMSLayout.cshtml";
    int counter = 0;
}




<section class="mb-4">
    <div class="card">
        <div class="card-body">
            <!-- Search row -->
            <div class="row g-3 align-items-end">
                <div class="col-md-5">
                    <label for="searchName" class="form-label">Name</label>
                    <input id="searchName" type="text" class="form-control" placeholder="Search by department name">
                </div>
                <div class="col-md-5">
                    <label for="searchLocation" class="form-label">Location</label>
                    <input id="searchLocation" type="text" class="form-control" placeholder="Search by location">
                </div>

                <div class="col-md-2 d-flex gap-2">
                    <button id="btnSearch" class="btn btn-primary">Search</button>
                    <button id="btnClear" class="btn btn-outline-secondary">Clear</button>
                </div>
            </div>

            <div class="mt-3">
                <button id="btnAddDept" class="btn btn-success" onclick="goToAdd()">Add Department</button>
            </div>
        </div>
    </div>
</section>

<!-- Grid / Table -->
<section>
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table id="deptTable">
                    <thead class="table-light">
                        <tr>
                            <th>Sno</th>
                            <th>Code</th>
                            <th>Name</th>
                            <th>Location</th>
                            <th>Active</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count < 1)
                        {
                            <tr>
                                <td colspan="6" class="text-center">No department(s) found.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var dept in Model)
                            {
                                <tr >
                                    <td style="background-color:@(!dept.IsActive ? "red !important" : "")">@(++counter)</td>
                                    <td style="background-color:@(!dept.IsActive ? "red !important" : "")">
                                        <a 
                                            title="click on this link to view details of @dept.DeptName department"
                                            asp-route-id="@dept.DepartmentId" 
                                            asp-controller="Department" 
                                            asp-action="ViewDepartment">@dept.Code</a>
                                    </td>
                                    <td style="background-color:@(!dept.IsActive ? "red !important" : "")">@dept.DeptName</td>
                                    <td style="background-color:@(!dept.IsActive ? "red !important" : "")">@( string.IsNullOrEmpty(dept.Location) ? "NA": dept.Location)</td>
                                    <td style="background-color:@(!dept.IsActive ? "red !important" : "")">@(dept.IsActive ? "Yes" : "No")</td>
                                    <td style="background-color:@(!dept.IsActive ? "red !important" : "")">
                                        @* @Html.ActionLink("View", "ViewDepartment", "Department", new { @id = dept.DepartmentId })
                                        @Html.ActionLink("Edit", "EditDepartment", "Department", new { @id = dept.DepartmentId })
                                        *@
                                        @Html.ActionLink("View", "View", "Department", new { @id = dept.DepartmentId}, new { @class = "btn btn-info" })
                                      
                                        <a class="btn btn-primary" href="/Department/EditDepartment/@dept.DepartmentId">Edit</a>
                                        @if(dept.IsActive)
                                        {
                                        <button 
                                            class="btn btn-danger" 
                                            onclick="if(confirm('Are you sure you want to deactivate @dept.DeptName-@dept.Code department?')){ alert('successfully deactivated') }">
                                                Deactivate</button>
                                        }
                                        else
                                        {
                                            <button 
                                                class="btn btn-success"
                                                    onclick="if(confirm('Are you sure you want to activate @dept.DeptName-@dept.Code department?')){ alert('successfully activated') }">
                                                Activate
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer text-muted small">
            Showing departments.Use Search to filter results.
        </div>
    </div>
</section>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
